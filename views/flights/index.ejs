<%- include('../partials/header') %>

<body>

    <h1>Flights</h1>

    <table>
        <tr>
            <th>Airline</th>
            <th>Airport</th>
            <th>Flight No.</th>
            <th>Departure</th>
            <th>Flight Details</th>
        </tr>

        <% flights.forEach(function(f) { %>
        <tr>
            <td><%= f.airline %></td>
            <td><%= f.airport %></td>
            <td><%= f.flightNo %></td>
            <td><%= f.departs %></td>
            <td><a href="/flights/<%= f._id %>">See Details</a></td>
        </tr>

        <% }); %> 
    </table>
    
</body>

