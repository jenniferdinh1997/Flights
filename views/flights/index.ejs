<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/flightsindex.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=PT+Serif&display=swap" rel="stylesheet">
    <title> <%= title %> </title>
</head>

<body>

    <nav>
        <a href="/">
            <input type="button" id="home" value="Home">
        </a>

        <a href="/flights/new">
            <input type="button" id="new" value="Add New Flight">
        </a>
    </nav>

    <h1>Flights</h1>

    <table>
        <tr>
            <th>Airline</th>
            <th>Airport</th>
            <th>Flight No.</th>
            <th>Departure</th>
            <th>Flight Details</th>
        </tr>

        <% flights.forEach(function(f) { %>
        <tr>
            <td><%= f.airline %></td>
            <td><%= f.airport %></td>
            <td><%= f.flightNo %></td>
            <td><%= f.departs %></td>
            <td><a href="/flights/<%= f._id %>">See Details</a></td>
        </tr>

        <% }); %> 
    </table>
    
</body>

</html>